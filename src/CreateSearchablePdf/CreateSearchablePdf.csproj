<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <ImplicitUsings>disable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <RootNamespace>KsWare.$(MSBuildProjectName.Replace(" ", "_"))</RootNamespace>
    <PackageId>KsWare.$(AssemblyName)</PackageId>
    <Title>KsWare CreateSearchablePdf</Title>
    <Authors>KsWare</Authors>
    <Company>KsWare</Company>
    <Product>KsWare.CreateSearchablePdf</Product>
    <Description>CLI for creating searchable PDFs</Description>
    <Copyright>Copyright © 2024 by KsWare</Copyright>
    <PackageIcon>icon.png</PackageIcon>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <VersionPrefix>0.1</VersionPrefix>
    <Version>$(VersionPrefix).0</Version>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\..\ChangeLog.md" Link="Properties\ChangeLog.md" />
    <None Include="..\..\icon.png">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
    <None Include="..\..\README.md" Link="Properties\README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

</Project>
